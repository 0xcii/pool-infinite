{
  "compilerOptions": {
    "target": "es2020",
    
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src",
    "types": [
      "webpack-env"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./src/types/"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.{js,jsx,ts,tsx}"
  ]
}
